<mvc:View
    controllerName="sap.demo.sitedirectory.Table"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table id="idProductsTable"
           inset="false"
           items="{
			path: '/',
			sorter: {
				path: 'Name'
			}
		}">
        <headerToolbar>
            <Toolbar>
                <Title text="FLP Sites" level="H2"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
                hAlign="Center">
                <Text text="Name" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
                hAlign="Center">
                <Text text="State" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
                hAlign="Center">
                <Text text="URL" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text
                        text="{name}" />
                    <ObjectNumber
                        number="{state}"
                        unit="{instances}"
                        state="{
							path: 'state',
							formatter: 'sap.demo.sitedirectory.Formatter.siteState'
						}" />
                    <Link target="_blank" href="{url}" text="{url}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
