<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>mta</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>../mtad.yaml</source>
            <outputDirectory>META-INF</outputDirectory>
        </file>
		<file>
            <source>../xs-security.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>../ui</directory>
            <outputDirectory>ui</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../admin-js</directory>
            <outputDirectory>admin-js</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../xsjs</directory>
            <outputDirectory>xsjs</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../jobs-js</directory>
            <outputDirectory>jobs-js</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../db</directory>
            <outputDirectory>db</outputDirectory>
            <excludes>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../src/target</directory>
            <outputDirectory>ui/resources/source</outputDirectory>
            <includes>
                <include>sap-xsac-shine-src-code.zip</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
