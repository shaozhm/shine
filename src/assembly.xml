<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>code</id>
    <formats>
	    <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>../mtad.yaml</source>
            <outputDirectory>.</outputDirectory>
        </file>
		<file>
            <source>../xs-security.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
		<file>
            <source>../manifest-op.yml</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>../ui</directory>
            <outputDirectory>ui</outputDirectory>
            <excludes>
			<exclude>node_modules/</exclude>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
				<exclude>sapui5/</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../admin-js</directory>
            <outputDirectory>admin-js</outputDirectory>
            <excludes>
			<exclude>node_modules/</exclude>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
				<exclude>.cfignore</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../xsjs</directory>
            <outputDirectory>xsjs</outputDirectory>
            <excludes>
			<exclude>node_modules/</exclude>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
				<exclude>.cfignore</exclude>
				<exclude>.jshintrc</exclude>
				<exclude>.npmignore</exclude>
            </excludes>
        </fileSet>
		<fileSet>
            <directory>../jobs-js</directory>
            <outputDirectory>jobs-js</outputDirectory>
            <excludes>
			<exclude>node_modules/</exclude>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
				<exclude>.cfignore</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../db</directory>
            <outputDirectory>db</outputDirectory>
            <excludes>
			<exclude>node_modules/</exclude>
                <exclude>node/</exclude>
                <exclude>target/</exclude>
                <exclude>etc/</exclude>
                <exclude>pom.xml</exclude>
				<exclude>.cfignore</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>